<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:elevation="2dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/curved" />

    <TextView
        android:fontFamily="More Fonts..."
        android:id="@+id/songNameMV"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/imageMV"
        android:text="songname"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageMV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="More Fonts..."
        android:id="@+id/songAlbumMV"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/songNameMV"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toEndOf="@+id/imageMV"
        android:text="songname"
        app:layout_constraintStart_toEndOf="@+id/imageMV"
        app:layout_constraintTop_toBottomOf="@+id/songNameMV" />

    <TextView
        android:id="@+id/popUp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/popup"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="More Fonts..."
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="00:00"
        app:layout_constraintEnd_toStartOf="@+id/popUp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>